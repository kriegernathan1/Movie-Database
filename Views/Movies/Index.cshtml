@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Movies";
}

<h1>Index</h1>

<form asp-controller="Movies" asp-action="Index" method="get">
    <div class="form-group d-flex flex-column w-50">
        <input class="form-control mb-2" id="movie-search" name="searchString" type="search"
            placeholder="Search by movie name or genre" />
        <select name="movieGenre" class="form-control mb-2" asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All</option>
        </select>
    </div>
    <div class="">
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
</form>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].ReleaseDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Genre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Movies![0].Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Movies!)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReleaseDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Genre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Price)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
